<%- include('../partials/header.ejs') %> 

<div class="container">
    <a class="nav-link" href="/door/add">
        <button type="button" class="btn btn-outline-success">Add a New Access Point</button>
    </a>
    <table class="table shadow-lg p-3 mb-5 bg-white rounded">
        <thead>
        <tr>
            <th scope="col">Access Point ID</th>
            <th scope="col">Access Point Name</th>
            <th scope="col">Sensitive</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
            <% doors.forEach(door => { %>
                <tr>
                    <td><%= door.doorID %></td>
                    <td><%= door.doorName %></td>
                    <td><%= door.sensitive %></td>
                    <td>
                        <a href="/door/<%= door._id %> ">
                            <button type="button" class="btn btn-outline-success">Update Access Point </button>
                        </a>
                    </td>
                    <td>
                        <form action="/door/delete/<%= door._id %>" method="POST">
                            <button class="btn btn-outline-danger">Remove Access Point</button>
                        </form>
                    </td>
                </tr> 
            <% }) %> 
    </table>
</div>

<%- include('../partials/footer.ejs') %> 